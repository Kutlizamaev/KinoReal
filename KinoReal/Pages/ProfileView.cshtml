@page
@model KinoReal.Pages.ProfileViewModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
	<style>
		html {
			overflow: hidden;
		}

		body {
			background: url(@Url.Content("~/img/background.jpg"));
		}
	</style>
</head>
<body>
	<div class="container_authorization_main d-flex flex-column align-items-center position-absolute top-50 start-50 translate-middle">
		<div class="nav flex-row nav-pills me-3 gap-2" id="v-pills-tab" role="tablist" aria-orientation="vertical">
			<button class="nav-link active bg-dark link-secondary" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="true">Профиль</button>
			<button class="nav-link bg-dark link-secondary" id="v-pills-editor-tab" data-bs-toggle="pill" data-bs-target="#v-pills-editor" type="button" role="tab" aria-controls="v-pills-editor" aria-selected="false">Редактировать</button>
		</div>

		<div class="tab-content d-flex flex-fill align-items-center" id="v-pills-tabContent">
			<div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
				<div class="d-flex flex-row">
					<div>
						<div class="m-3 text-wrap badge bg-primary fs-2 text-black-50 bg-white" style="margin-bottom: 50px;">
							Мои данные:
						</div>
						<div class="d-flex flex-column">
							<div class="m-3 text-wrap badge bg-primary fs-2 text-black-50 bg-white">
								@Model.profile.Fullname
							</div>
							<div class="m-3 text-wrap badge bg-primary fs-2 text-black-50 bg-white">
								@Model.profile.City
							</div>
							<div class="m-3 text-wrap badge bg-primary fs-2 text-black-50 bg-white">
								@Model.profile.Birthday
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="tab-pane fade" id="v-pills-editor" role="tabpanel" aria-labelledby="v-pills-editor-tab">
				<div class="profile">
					<div>
						<div class="profile_data_input text-wrap badge bg-primary fs-2 text-black-50 bg-white" style="margin-bottom: 50px;">
							Введите данные:
						</div>
						<div class="d-flex flex-column">
							<form method="post">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="inputGroup-sizing-default">ФИО</span>
									</div>
									<input type="text" name="fullname" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
								</div>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="inputGroup-sizing-default">Город</span>
									</div>
									<input type="text" name="city" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
								</div>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="inputGroup-sizing-default">Дата рождения</span>
									</div>
									<input type="date" name="birthday" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
								</div>
								<button type="submit" class="btn btn-outline-light">Редактировать</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<form>
			<button asp-page="/logout" class="bg-dark link-secondary btn-lg rounded-3">Выйти</button>
		</form>
	</div>
</body>
</html>